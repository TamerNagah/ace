<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record model="ir.rule" id="ks_mail_mail_user">
            <field name="name">User : mail.mail to get own mail only</field>
            <field name="model_id" ref="mail.model_mail_mail"/>
            <field name="active" eval="True"/>
            <field name="domain_force">['|', ('author_id', '=', user.partner_id.id), ('recipient_ids', 'in', [user.partner_id.id])]</field>
            <field name="groups" eval="[(4, ref('ks_office365_base.office_users_group_id'))]"/>
        </record>

        <record model="ir.rule" id="ks_mail_mail_manager">
            <field name="name">User : mail.mail to get all mail</field>
            <field name="model_id" ref="mail.model_mail_mail"/>
            <field name="active" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('ks_office365_base.office_manager_group_id'))]"/>
        </record>
    </data>
</odoo>