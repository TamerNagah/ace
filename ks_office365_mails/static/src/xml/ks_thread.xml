<?xml version="1.0" encoding="utf-8" ?>
<templates xml:space="preserve">
    <!--This template Provide Sender's address And Receiver's Address and Subject of the Mail-->
    <t t-extend="mail.widget.Thread.Message">
        <t t-jquery=".o_thread_message_content" t-operation="before">
            <div>
                <t t-if="message.getEmailFrom &amp;&amp; message._threadIDs &amp;&amp; message._threadIDs.includes('mailbox_inbox')">
                    <font color="#000000" style="font-size:11pt">
                        <b>Subject: </b> <t t-esc="message.getSubject()"/>
                        <br/>
                        <b >From: </b> <t t-esc="message.getEmailFrom()"/>
                        <br/>
                        <b>Date: </b> <t t-esc="message.getDate().format(dateFormat)"/>
                        <br/>
                        <b>To: </b> <t t-esc="message.ks_get_recipient()"/>
                    </font>
                </t>
            </div>
            <br/>
        </t>
    </t>
</templates>